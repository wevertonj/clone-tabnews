{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Projetinho do curso.dev",
  "main": "index.js",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "npm run services:up && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "services:up": "export $(cat .env | xargs) && docker compose -f src/shared/infra/compose.yaml up -d",
    "services:stop": "docker stop flubnews_database",
    "services:down": "docker stop flubnews_database && docker rm flubnews_database",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:create": "node-pg-migrate --migrations-dir src/shared/infra/migrations create",
    "migration:up": "node-pg-migrate --migrations-dir src/shared/infra/migrations --envPath .env up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wevertonj/clone-tabnews.git"
  },
  "author": "Weverton J. da Silva",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wevertonj/clone-tabnews/issues"
  },
  "homepage": "https://github.com/wevertonj/clone-tabnews#readme",
  "dependencies": {
    "@nestjs/common": "^10.4.15",
    "@nestjs/core": "^10.4.15",
    "@nestjs/platform-fastify": "^10.4.15",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.0",
    "fp-ts": "^2.16.9",
    "module-alias": "^2.2.3",
    "node-pg-migrate": "^7.9.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@stylistic/eslint-plugin-ts": "^2.12.1",
    "@types/jest": "^29.5.14",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^22.10.1",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.16.0",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1"
  }
}
